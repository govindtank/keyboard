                        android:text=""
                        android:id="@+id/lightpurple"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@color/lightpurple" />

                    <Button
                        android:text=""
                        android:id="@+id/purple"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@color/purple" />

                    <Button
                        android:text=""
